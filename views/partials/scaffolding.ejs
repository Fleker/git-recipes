<app-header>
    <app-toolbar>
        <paper-icon-button icon="menu" style="display:none"></paper-icon-button>
        <a href='/'>Recipes.tech</a>
        <div main-title>
        </div>
    </app-toolbar>
    <app-drawer id="drawer" swipe-open style="display:none">
        Nothing to see here!
    </app-drawer>
</app-header>

<script>
    const drawer = document.querySelector('app-drawer');
    document.querySelector('paper-icon-button')
        .addEventListener('click', function() {
            drawer.toggle();
        });

    window.addEventListener('load', () => {
        document.getElementById('splashscreen').classList.add('hide');
    });
</script>